<div class="form-style-8">
  <%= form_for @video do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </fieldset>
  <fieldset>
    <%= f.label :technique %>
    <%= f.text_field :technique %>
  </fieldset>
  <fieldset>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </fieldset>
  <fieldset>
    <%= f.label :blurb %>
    <%= f.text_field :blurb %>
  </fieldset>
  <fieldset>
    <%= f.label :hairdresser_id %>
    <%= f.select :hairdresser_id, Hairdresser.pluck(:name, :id), :include_blank => true %>
    <!-- include_blank allows a blank option on the form so you can add a new artist ^^  -->
  </fieldset>
  <fieldset>
    <%= f.label :user_id %>
    <%= f.select :user_id, User.pluck(:first_name, :id), :include_blank => true %>
    <!-- include_blank allows a blank option on the form so you can add a new artist ^^  -->
  </fieldset>
  <%= f.submit %>
  <% end %>
</div>
